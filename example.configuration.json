{
    "dataset_config": {
        "dataset_name": "RAVDESS"
    },
    "pre_processing_config": {
        "process": "standardize",
        "create_splits": true,
        "target_sr": 16000,
        "padding": true,
        "max_length": 5
    },
    "handcrafted_features_config":{
        "features_to_extract":["MFCC,eGeMAPs"]
    },
    "ssl_config":{
        "method":"SimCLR",
        "epochs":20,
        "batch_size":128,
        "kwargs":{
          "lr":0.0001,
          "n_views":2,
          "temperature":0.05,
          "optimizer_name_ssl":"adam"
        }
    },
    "augmentations":{
            "gaussian_noise":{
              "kwargs":{
                  "mean":0,
                  "std":0.2
              }
          },
            "scale":{
              "kwargs":{
                  "max_scale": 1.3
              }
          }
    },
    "transforms":[
            {"class_name": "ToTensor",
             "from_module": "general_transforms",
             "transform_name": "to_tensor",
             "in_test": true
            },
            {"class_name": "Permute",
             "from_module": "general_transforms",
             "transform_name": "permutation",
             "in_test": true,
             "kwargs":{
                "shape": [1,0]
             }
            },
            {"class_name": "ToFloat",
            "from_module": "general_transforms",
             "transform_name": "to_float",
             "in_test": true
            }
    ]
}